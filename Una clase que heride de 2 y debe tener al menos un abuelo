.. code:: ipython3

    # Clase abuelo 1: Vehiculo
    class Vehiculo:
        # Atributos de la clase Vehiculo
        def __init__(self, marca, modelo):
            self.marca = marca
            self.modelo = modelo
            self.tipo = "Vehículo"
    
        def info_vehiculo(self):
            return f"Marca: {self.marca}, Modelo: {self.modelo}"
    
    # Clase abuelo 2: Motor
    class Motor:
        # Atributos de la clase Motor
        def __init__(self, tipo_motor, potencia):
            self.tipo_motor = tipo_motor
            self.potencia = potencia
    
        def info_motor(self):
            return f"Motor: {self.tipo_motor}, Potencia: {self.potencia} HP"
    
    # Clase hija: Auto que hereda de Vehiculo y Motor
    class Auto(Vehiculo, Motor):
        # Atributos de la clase Auto
        def __init__(self, marca, modelo, tipo_motor, potencia, color, anio):
            # Inicializando atributos de Vehiculo y Motor
            Vehiculo.__init__(self, marca, modelo)
            Motor.__init__(self, tipo_motor, potencia)
            self.color = color
            self.anio = anio
    
        def mostrar_info(self):
            vehiculo_info = self.info_vehiculo()
            motor_info = self.info_motor()
            return f"{vehiculo_info}, Año: {self.anio}, Color: {self.color}, {motor_info}"
    
    # Creación de instancias de la clase Auto para diferentes autos
    auto1 = Auto("Chevrolet", "Corvette C6", "V8", 505, "Negro", 2008)
    auto2 = Auto("Dodge", "Charger Hellcat", "V8 Supercargado", 717, "Rojo", 2020)
    auto3 = Auto("BMW", "M8", "V8", 617, "Azul", 2021)
    
    # Mostramos la información de los autos
    print(auto1.mostrar_info())
    print(auto2.mostrar_info())
    print(auto3.mostrar_info())
    


.. parsed-literal::

