   "source": [
    "# Definimos la cantidad de días en cada mes\n",
    "meses = {\n",
    "    \"enero\": 31, \"febrero\": 28, \"marzo\": 31, \"abril\": 30, \"mayo\": 31, \"junio\": 30,\n",
    "    \"julio\": 31, \"agosto\": 31, \"septiembre\": 30, \"octubre\": 31, \"noviembre\": 30, \"diciembre\": 31\n",
    "}\n",
    "\n",
    "# Datos de nacimiento\n",
    "dia_nac = 22\n",
    "mes_nac = \"febrero\"\n",
    "año_nac = 2009\n",
    "\n",
    "# Fecha actual\n",
    "dia_hoy = 5\n",
    "mes_hoy = \"febrero\"\n",
    "año_actual = 2025\n",
    "\n",
    "# Función para contar años bisiestos entre dos años\n",
    "def contar_bisiestos(año_inicio, año_fin):\n",
    "    return sum(1 for año in range(año_inicio, año_fin + 1) if (año % 4 == 0 and año % 100 != 0) or (año % 400 == 0))\n",
    "\n",
    "# Calcular los días vividos\n",
    "dias_totales = 0\n",
    "\n",
    "# Días desde el nacimiento hasta el final de ese año\n",
    "dias_totales += meses[mes_nac] - dia_nac\n",
    "for mes in list(meses.keys())[list(meses.keys()).index(mes_nac) + 1:]:\n",
    "    dias_totales += meses[mes]\n",
    "\n",
    "# Días de los años completos vividos\n",
    "dias_totales += (año_actual - año_nac - 1) * 365\n",
    "\n",
    "# Sumar años bisiestos\n",
    "dias_totales += contar_bisiestos(año_nac, año_actual - 1)\n",
    "\n",
    "# Días desde el inicio del año actual hasta hoy\n",
    "for mes in list(meses.keys())[:list(meses.keys()).index(mes_hoy)]:\n",
    "    dias_totales += meses[mes]\n",
    "dias_totales += dia_hoy\n",
    "\n",
    "print(f\"Has vivido aproximadamente {dias_totales} días.\")\n"
   ]
